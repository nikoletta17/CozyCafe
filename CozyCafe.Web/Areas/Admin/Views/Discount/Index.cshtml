@model IEnumerable<CozyCafe.Models.DTO.Admin.DiscountDto>

@{
    ViewData["Title"] = "Список знижок";
}

<h1>Список знижок</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Додати нову знижку</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Код</th>
            <th>Відсоток (%)</th>
            <th>Дійсна до</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var discount in Model)
        {
            <tr>
                <td>@discount.Code</td>
                <td>@discount.Percent</td>
                <td>@discount.ValidTo.ToString("dd.MM.yyyy")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@discount.Id" class="btn btn-info btn-sm">Деталі</a>
                    <a asp-action="Edit" asp-route-id="@discount.Id" class="btn btn-warning btn-sm">Редагувати</a>
                    <a asp-action="Delete" asp-route-id="@discount.Id" class="btn btn-danger btn-sm">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
