@model CozyCafe.Models.DTO.Admin.MenuItemDto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<style>
    body {
        font-family: 'Playfair Display', serif;
        background-color: #f9f6f1;
        color: #3b3a30;
        padding: 2rem;
    }

    h2 {
        text-align: center;
        font-size: 2.5rem;
        color: #4b4a3f;
        margin-bottom: 2rem;
        text-shadow: 1px 1px 2px #c2b280;
    }

    .item-details {
        max-width: 600px;
        margin: 0 auto 2rem auto;
        background-color: #fffaf0;
        padding: 1.5rem 2rem;
        border: 2px solid #c2b280;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0,0,0,0.1);
        text-align: center;
    }

        .item-details h4 {
            font-size: 1.8rem;
            color: #4b4a3f;
            margin-bottom: 0.5rem;
        }

    .cozy-btn {
        font-family: 'Playfair Display', serif;
        padding: 0.5rem 1.2rem;
        background-color: #4b4a3f;
        border: 2px solid #c2b280;
        color: #c2b280 !important;
        text-decoration: none;
        border-radius: 8px;
        transition: all 0.3s ease;
        margin-right: 0.5rem;
        cursor: pointer;
        display: inline-block;
    }

        .cozy-btn:hover {
            background-color: #c2b280;
            color: #4b4a3f !important;
        }

    .btn-delete {
        background-color: #8b1a1a;
        border-color: #c2b280;
        color: #fff !important;
    }

        .btn-delete:hover {
            background-color: #c2b280;
            color: #8b1a1a !important;
        }

    .btn-container {
        text-align: center;
        margin-top: 1.5rem;
    }
</style>

<h2>Видалити елемент меню?</h2>

<div class="item-details">
    <h4>@Model.Name</h4>
    <p>@Model.Description</p>
    <p>Ціна: @Model.Price.ToString("C")</p>
</div>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <div class="btn-container">
        <button type="submit" class="cozy-btn btn-delete">Видалити</button>
        <a asp-action="Index" class="cozy-btn">Назад</a>
    </div>
</form>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
