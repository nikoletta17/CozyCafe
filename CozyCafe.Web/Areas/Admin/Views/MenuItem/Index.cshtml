@model IEnumerable<CozyCafe.Models.DTO.Admin.MenuItemDto>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<style>

    body {
        background-color: #f9f6f1;
    }
    .cozy-table {
        width: 100%;
        border-collapse: collapse;
        font-family: 'Playfair Display', serif;
    }

        .cozy-table th,
        .cozy-table td {
            border: 2px solid #c2b280;
            padding: 0.6rem 1rem;
            text-align: left;
        }

        .cozy-table th {
            background-color: #4b4a3f;
            color: #c2b280;
        }

        .cozy-table tr:nth-child(even) {
            background-color: #f5f0e1;
        }

    .cozy-btn-sm {
        font-family: 'Playfair Display', serif;
        padding: 0.3rem 0.8rem;
        background-color: #4b4a3f;
        border: 2px solid #c2b280;
        color: #c2b280 !important;
        border-radius: 6px;
        transition: all 0.3s ease;
        margin-right: 0.3rem;
        cursor: pointer;
        display: inline-block;
        font-size: 0.9rem;
        text-decoration: none;
    }

        .cozy-btn-sm:hover {
            background-color: #c2b280;
            color: #4b4a3f !important;
        }

    .cozy-btn {
        font-family: 'Playfair Display', serif;
        padding: 0.5rem 1.2rem;
        background-color: #4b4a3f;
        border: 2px solid #c2b280;
        color: #c2b280 !important;
        text-decoration: none;
        border-radius: 8px;
        transition: all 0.3s ease;
        margin: 0.5rem;
        cursor: pointer;
        display: inline-block;
        font-size: 1rem;
    }

        .cozy-btn:hover {
            background-color: #c2b280;
            color: #4b4a3f !important;
        }

    .center-content {
        text-align: center;
        margin-bottom: 1rem;
    }
</style>

<div class="center-content">
    <h1>Адмінська панель меню</h1>
    <a asp-action="Create" class="cozy-btn">Додати новий елемент</a>
    <a asp-controller="Home" asp-action="Index" asp-area="User" class="cozy-btn">Назад</a>
</div>

<table class="cozy-table">
    <thead>
        <tr>
            <th>Назва</th>
            <th>Ціна</th>
            <th>Категорія</th>
            <th style="width: 220px;">Дії</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.CategoryName</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="cozy-btn-sm">Редагувати</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="cozy-btn-sm">Видалити</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">Немає елементів меню</td>
            </tr>
        }
    </tbody>
</table>
