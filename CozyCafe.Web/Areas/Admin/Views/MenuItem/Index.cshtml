@model IEnumerable<CozyCafe.Models.DTO.Admin.MenuItemDto>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<h2>Адмінська панель меню</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Додати новий елемент</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Назва</th>
            <th>Ціна</th>
            <th>Категорія</th>
            <th style="width: 200px;">Дії</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.CategoryName</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Редагувати</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"> Видалити</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">Немає елементів меню</td>
            </tr>
        }
    </tbody>
</table>
