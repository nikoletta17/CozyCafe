@model (IEnumerable<CozyCafe.Models.DTO.Admin.MenuItemDto> Items, CozyCafe.Models.DTO.Admin.MenuItemFilterModel Filter)

@using Microsoft.AspNetCore.Mvc.Rendering

<h2>Меню</h2>

<form method="get" asp-controller="MenuItem" asp-action="Index" class="mb-3">

    <input type="text" name="SearchTerm" value="@Model.Filter.SearchTerm" placeholder="Пошук за назвою" class="form-control mb-2" />

    <select name="CategoryId" class="form-select mb-2">
        <option value="">Всі категорії</option>
        @foreach (var cat in (SelectList)ViewBag.Categories)
        {
            <option value="@cat.Value" selected="@(cat.Value == (Model.Filter.CategoryId?.ToString() ?? "") ? "selected" : null)">
                @cat.Text
            </option>
        }
    </select>

    <input type="number" name="MinPrice" step="0.01" value="@(Model.Filter.MinPrice ?? 0)" placeholder="Мінімальна ціна" class="form-control mb-2" />
    <input type="number" name="MaxPrice" step="0.01" value="@(Model.Filter.MaxPrice ?? 0)" placeholder="Максимальна ціна" class="form-control mb-2" />

    @Html.DropDownList("SortBy", (IEnumerable<SelectListItem>)ViewBag.SortOptions, "Сортувати за", new { @class = "form-select mb-2" })

    <button type="submit" class="btn btn-primary">Фільтрувати</button>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Назва</th>
            <th>Опис</th>
            <th>Ціна</th>
            <th>Категорія</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.CategoryName</td>
            </tr>
        }
    </tbody>
</table>
