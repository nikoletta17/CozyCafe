@model CozyCafe.Models.Domain.Admin.MenuItem

@{
    ViewData["Title"] = "Видалити страву";
}

<h2>Видалити страву</h2>

<h4>Ви впевнені, що хочете видалити цю страву?</h4>
<div>
    <h5>@Model.Name</h5>
    <p>@Model.Description</p>
    <p><strong>Категорія:</strong> @(Model.Category?.Name ?? "")</p>
    <p><strong>Ціна:</strong> @Model.Price.ToString("C")</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Видалити</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary ms-2">Скасувати</a>
</form>
