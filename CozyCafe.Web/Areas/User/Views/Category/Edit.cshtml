@model CozyCafe.Models.DTO.Admin.CategoryDto

<div class="page-container">
    <h2 class="page-title">Редагувати категорію</h2>

    <form asp-action="Edit" method="post" class="cozy-form">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control cozy-input" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <button type="submit" class="cozy-btn save-btn">Зберегти</button>
            <a href="https://localhost:7226/User/Home/Index" class="cozy-btn back-btn">Назад</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .page-container {
        padding: 3rem 2rem;
        min-height: 80vh;
        background-color: #f9f6f1;
        font-family: 'Playfair Display', serif;
        color: #3b3a30;
    }

    .page-title {
        font-size: 2rem;
        font-weight: 700;
        color: #4b4a3f;
        margin-bottom: 2rem;
        border-bottom: 3px solid #c2b280;
        display: inline-block;
        padding-bottom: 0.3rem;
        text-align: center;
        width: 100%;
    }

    .cozy-form {
        max-width: 500px;
        margin: 0 auto;
        background: #fff;
        padding: 2rem;
        border-radius: 10px;
        border: 2px solid #c2b280;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    .form-label {
        font-weight: 600;
        margin-bottom: 0.5rem;
        display: block;
        color: #4b4a3f;
    }

    .cozy-input {
        width: 100%;
        padding: 0.6rem 1rem;
        border: 2px solid #c2b280;
        border-radius: 8px;
        font-family: 'Playfair Display', serif;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        .cozy-input:focus {
            border-color: #4b4a3f;
            outline: none;
            box-shadow: 0 0 6px rgba(75, 74, 63, 0.4);
        }

    .form-actions {
        margin-top: 1.5rem;
        display: flex;
        gap: 1rem;
        justify-content: center;
    }

    .cozy-btn {
        font-family: 'Playfair Display', serif;
        padding: 0.5rem 1.2rem;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        cursor: pointer;
    }

    .save-btn {
        background-color: #4b4a3f;
        border: 2px solid #c2b280;
        color: #c2b280 !important;
    }

        .save-btn:hover {
            background-color: #c2b280;
            color: #4b4a3f !important;
        }

    .cancel-btn {
        background-color: #e0dccc;
        border: 2px solid #c2b280;
        color: #4b4a3f !important;
    }

        .cancel-btn:hover {
            background-color: #c2b280;
            color: #fff !important;
        }
</style>
