@model IEnumerable<CozyCafe.Models.DTO.Admin.CategoryDto>

@{
    ViewData["Title"] = "Категорії";
}

<h2>Категорії</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Назва</th>
            <th>Батьківська категорія</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">
                    Редагувати
                </a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                    Видалити
                </a>
            </td>
        </tr>
                }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Додати категорію</a>
