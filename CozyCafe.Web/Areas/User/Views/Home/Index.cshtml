@model IEnumerable<CozyCafe.Models.Domain.Admin.Category>

@{
    ViewData["Title"] = "CozyCafe - Ласкаво просимо";
}

<style>
    body {
        font-family: 'Playfair Display', serif;
        background-color: #f9f6f1;
        color: #3b3a30;
    }

    .hero {
        background-image: url('/images/food-banner.jpg');
        background-size: cover;
        background-position: center;
        height: 450px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        color: #fff;
        text-shadow: 2px 2px 5px rgba(0,0,0,0.7);
        margin-bottom: 2rem;
    }

        .hero h1 {
            font-size: 4rem;
            margin-bottom: 1rem;
            font-weight: 700;
        }

        .hero a.btn {
            font-size: 1.5rem;
            padding: 0.8rem 2rem;
            background-color: #4b4a3f;
            border: 2px solid #c2b280;
            color: #c2b280;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

            .hero a.btn:hover {
                background-color: #c2b280;
                color: #4b4a3f;
            }

    .categories {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
        flex-wrap: wrap;
        margin-bottom: 4rem;
    }

    .category-card {
        background-color: #fff;
        border: 1px solid #c2b280;
        border-radius: 10px;
        padding: 1.5rem 2rem;
        text-align: center;
        width: 180px;
        cursor: pointer;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
    }

        .category-card:hover {
            background-color: #c2b280;
            color: #fff;
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        }

        .category-card h3 {
            margin: 0;
            font-weight: 600;
        }

    .promo-row {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
        flex-wrap: wrap;
        margin: 2rem 0;
    }

    .promo-img {
        width: 200px;
        height: 140px;
        object-fit: cover;
        border-radius: 10px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.2);
    }

    .filter-buttons {
        display: flex;
        justify-content: center;
        gap: 1rem;
        flex-wrap: wrap;
        margin-bottom: 3rem;
    }

        .filter-buttons a {
            padding: 0.8rem 1.5rem;
            border: 2px solid #4b4a3f;
            background-color: transparent;
            color: #4b4a3f;
            font-weight: 600;
            border-radius: 30px;
            text-decoration: none;
            transition: 0.3s ease;
        }

            .filter-buttons a:hover {
                background-color: #4b4a3f;
                color: #fff;
            }
</style>

<div class="hero">
    <h1>Ласкаво просимо в CozyCafe</h1>
    <a class="btn" href="/MenuItem/Index">Побачити меню</a>
</div>

<hr class="my-5" style="border-top: 4px solid #c2b280; width: 80%; margin: 2rem auto;" />

<!-- Промо-картинки -->
<div class="promo-row">
    <img src="/images/menu1.jpg" alt="Promo 1" class="promo-img" />
    <img src="/images/menu2.jpg" alt="Promo 2" class="promo-img" />
    <img src="/images/menu3.jpg" alt="Promo 3" class="promo-img" />
    <img src="/images/menu4.jpg" alt="Promo 4" class="promo-img" />
</div>

<!-- Кнопки категорій -->
<!-- Кнопки категорій -->
<div class="filter-buttons">
    <a class="btn" asp-area="User" asp-controller="MenuItem" asp-action="Index" asp-route-CategoryName="Десерти">Десерти</a>
    <a class="btn" asp-area="User" asp-controller="MenuItem" asp-action="Index" asp-route-CategoryName="Основні страви">Основні страви</a>
    <a class="btn" asp-area="User" asp-controller="MenuItem" asp-action="Index" asp-route-CategoryName="Закуски">Закуски</a>
    <a class="btn" asp-area="User" asp-controller="MenuItem" asp-action="Index" asp-route-CategoryName="Напої">Напої</a>
</div>



<!-- Автоматичні категорії з БД -->
<div class="categories">
    @foreach (var category in Model)
    {
        <div class="category-card" onclick="location.href='@Url.Action("Index", "MenuItem", new { CategoryId = category.Id })'">
            <h3>@category.Name</h3>
        </div>
    }
</div>

