@model CozyCafe.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Вхід";
}

<style>
    .form-container {
        background: linear-gradient(135deg, #f4ede3 40%, #e0d5c0);
        padding: 3rem 1rem;
        min-height: 80vh;
        display: flex;
        justify-content: center;
        align-items: flex-start;
    }

    .form-box {
        max-width: 550px;
        width: 100%;
        background-color: #f9f6f1;
        border: 2px solid #c2b280;
        border-radius: 16px;
        padding: 2.5rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        backdrop-filter: blur(4px);
    }

        .form-box h2 {
            font-family: 'Playfair Display', serif;
            font-weight: 700;
            color: #4b4a3f;
            text-align: center;
            margin-bottom: 1.5rem;
            transition: all 0.4s ease-in-out;
        }

            .form-box h2:hover {
                background: linear-gradient(90deg, #4b4a3f, #c2b280);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            }

    .form-control {
        border-radius: 10px;
        border: 1px solid #c2b280;
        padding: 0.6rem;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-control:focus {
            border-color: #4b4a3f;
            box-shadow: 0 0 8px rgba(75, 74, 63, 0.5);
            outline: none;
        }

    .form-label {
        font-weight: 600;
        color: #4b4a3f;
        font-family: 'Playfair Display', serif;
    }

    .login-btn {
        background-color: #4b4a3f;
        border: 2px solid #c2b280;
        color: #c2b280;
        font-weight: bold;
        font-size: 1.2rem;
        padding: 0.6rem 2rem;
        border-radius: 12px;
        font-family: 'Playfair Display', serif;
        transition: all 0.3s ease;
    }

        .login-btn:hover {
            background-color: #c2b280;
            color: #4b4a3f;
        }

    .remember-me {
        font-family: 'Playfair Display', serif;
        font-weight: 500;
        color: #4b4a3f;
        margin-left: 0.3rem;
    }
</style>

<div class="form-container">
    <div class="form-box">
        <h2>🔐 @ViewData["Title"]</h2>

        <form asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3" style="font-family: 'Playfair Display', serif;"></div>

            <div class="mb-4">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="form-group mb-4 d-flex align-items-center">
                <input asp-for="RememberMe" />
                <label asp-for="RememberMe" class="remember-me">Запамʼятати мене</label>
            </div>

            <div class="text-center">
                <button type="submit" class="login-btn">Увійти</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
