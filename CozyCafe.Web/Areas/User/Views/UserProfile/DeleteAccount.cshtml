@model CozyCafe.Models.ViewModels.DeleteAccountViewModel

@{
    ViewData["Title"] = "Видалити акаунт";
}

<h2 class="text-danger">@ViewData["Title"]</h2>

<p>⚠Ця дія незворотна! Ваш акаунт буде повністю видалено.</p>

<form asp-action="DeleteAccount" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-danger">Видалити акаунт</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
