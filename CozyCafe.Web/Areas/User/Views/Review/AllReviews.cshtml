@model IEnumerable<CozyCafe.Models.DTO.ForUser.ReviewDto>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero">
    <h1>Відгуки клієнтів</h1>
    @if (User.Identity.IsAuthenticated)
    {
        <a class="btn" href="@Url.Action("Create", "Review", new { area = "User" })">Залишити відгук</a>
    }
    else
    {
        <a class="btn" href="@Url.Action("Register", "Account", new { area = "User" })">Залишити відгук</a>
    }
</div>


@if (!Model.Any())
{
    <p class="no-reviews">Ще немає жодного відгуку. Стань першим!</p>
}
else
{
    <div class="reviews-grid">
        @foreach (var review in Model)
        {
            <div class="review-card">
                <h3>@review.UserFullName</h3>
                <p class="date">@review.CreatedAt.ToShortDateString()</p>
                <div class="rating">⭐ @review.Rating / 5</div>
                @if (!string.IsNullOrWhiteSpace(review.Comment))
                {
                    <p class="comment">"@review.Comment"</p>
                }
            </div>
        }
    </div>
}

<style>
    body {
        font-family: 'Playfair Display', serif;
        background-color: #f9f6f1;
        color: #3b3a30;
    }

    .hero {
        background-image: url('/images/food-banner.jpg');
        background-size: cover;
        background-position: center;
        height: 450px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        color: #fff;
        text-shadow: 2px 2px 5px rgba(0,0,0,0.7);
        margin-bottom: 3rem;
    }

        .hero h1 {
            font-size: 4rem;
            margin-bottom: 1rem;
            font-weight: 700;
        }

        .hero a.btn {
            font-size: 1.5rem;
            padding: 0.8rem 2rem;
            background-color: #4b4a3f;
            border: 2px solid #c2b280;
            color: #c2b280;
            text-decoration: none;
            border-radius: 30px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .hero a.btn:hover {
                background-color: #c2b280;
                color: #4b4a3f;
            }

    .no-reviews {
        text-align: center;
        font-style: italic;
        color: #7a755c;
        font-size: 1.3rem;
        margin-top: 4rem;
    }

    .reviews-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 2rem;
        max-width: 1100px;
        margin: 0 auto 5rem;
        padding: 0 1.5rem;
    }

    .review-card {
        background-color: #fff;
        border: 2px solid #c2b280;
        border-radius: 15px;
        padding: 1.5rem 2rem;
        box-shadow: 0 6px 15px rgba(0,0,0,0.1);
        text-align: center;
        transition: transform 0.3s ease;
    }

        .review-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(194,178,128,0.4);
        }

        .review-card h3 {
            font-size: 1.7rem;
            color: #4b4a3f;
            margin-bottom: 0.5rem;
        }

        .review-card .date {
            font-size: 0.95rem;
            color: #7a755c;
            margin-bottom: 0.8rem;
        }

        .review-card .rating {
            font-weight: 700;
            color: #4b4a3f;
            border: 2px solid #c2b280;
            background-color: #f9f6f1;
            padding: 0.4rem 1rem;
            border-radius: 20px;
            display: inline-block;
            margin-bottom: 1rem;
        }

        .review-card .comment {
            font-style: italic;
            color: #3b3a30;
            font-size: 1.1rem;
            line-height: 1.6;
        }
</style>
