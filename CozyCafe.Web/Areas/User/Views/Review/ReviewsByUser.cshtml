@model IEnumerable<CozyCafe.Models.DTO.ForUser.ReviewDto>

<h2>Відгуки користувача</h2>

@if (!Model.Any())
{
    <p>Цей користувач ще не залишав відгуків.</p>
}
else
{
    <ul>
        @foreach (var review in Model)
        {
            <li>
                <strong>@review.UserFullName</strong> (@review.CreatedAt.ToShortDateString()) — Рейтинг: @review.Rating<br />
                @if (!string.IsNullOrEmpty(review.Comment))
                {
                    <p>@review.Comment</p>
                }
            </li>
        }
    </ul>
}
