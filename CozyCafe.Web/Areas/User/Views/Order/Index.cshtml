@model IEnumerable<CozyCafe.Models.DTO.ForUser.OrderDto>

@{
    ViewData["Title"] = "Усі замовлення";
}

<style>
    body {
        font-family: 'Playfair Display', serif;
        background-color: #f9f6f1;
        color: #3b3a30;
        margin: 0;
        padding: 0;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        /* Не ставимо justify-content: center на body */
    }

    main {
        flex: 1 0 auto; /* займати всю доступну висоту */
        display: flex;
        justify-content: center; /* центр по горизонталі */
        padding: 2rem 1rem;
    }

    .orders-container {
        max-width: 900px;
        width: 100%;
        background-color: #fff;
        border: 2px solid #c2b280;
        border-radius: 12px;
        padding: 1.5rem 2rem;
        box-shadow: 0 6px 12px rgba(0,0,0,0.1);
    }

    h2 {
        text-align: center;
        color: #4b4a3f;
        margin-bottom: 1.5rem;
        font-weight: 700;
        font-size: 2.5rem;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        font-size: 1rem;
        color: #4b4a3f;
    }

    thead tr {
        background-color: #4b4a3f;
        color: #c2b280;
    }

    th, td {
        padding: 0.75rem 1rem;
        border: 1.5px solid #c2b280;
        text-align: left;
        vertical-align: middle;
    }

        th:last-child, td:last-child {
            text-align: center;
            white-space: nowrap;
        }

    tbody tr:hover {
        background-color: #f0e9d2;
        cursor: default;
        transition: background-color 0.3s ease;
    }

    /* Кнопки в таблиці */
    .cozy-btn {
        font-family: 'Playfair Display', serif;
        padding: 0.4rem 1rem;
        background-color: #4b4a3f;
        border: 2px solid #c2b280;
        color: #c2b280 !important;
        text-decoration: none;
        border-radius: 8px;
        transition: all 0.3s ease;
        cursor: pointer;
        font-size: 0.85rem;
        margin-right: 0.4rem;
        display: inline-block;
    }

        .cozy-btn:hover {
            background-color: #c2b280;
            color: #4b4a3f !important;
        }

    /* Кнопка редагування - темніший колір тексту */
    .btn-edit {
        background-color: #c2b280;
        color: #2f2e23 !important; /* темніший колір тексту */
        border-color: #4b4a3f;
    }

        .btn-edit:hover {
            background-color: #4b4a3f;
            color: #c2b280 !important;
        }

    /* Кнопка видалення - яскравіший і контрастніший hover */
    .btn-delete {
        background-color: #8B0000;
        border-color: #8B0000;
        color: #fff !important;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
        box-shadow: none;
    }

        .btn-delete:hover {
            background-color: #ff3333; /* яскраво-червоний */
            box-shadow: 0 0 8px 2px rgba(255, 51, 51, 0.7);
            color: #fff !important;
        }
</style>

<main>
    <div class="orders-container">
        <h2>Усі замовлення</h2>

        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Дата</th>
                    <th>Статус</th>
                    <th style="text-align: right;">Сума</th>
                    <th>Дії</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.OrderedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@order.Status</td>
                        <td style="text-align: right;">@order.Total.ToString("C")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@order.Id" class="cozy-btn">Деталі</a>

                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Edit" asp-route-id="@order.Id" class="cozy-btn btn-edit">Редагувати</a>
                                <a asp-action="Delete" asp-route-id="@order.Id" class="cozy-btn btn-delete">Видалити</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</main>
