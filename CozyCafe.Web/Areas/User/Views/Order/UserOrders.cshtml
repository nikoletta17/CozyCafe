@model IEnumerable<CozyCafe.Models.DTO.ForUser.OrderDto>

@{
    ViewData["Title"] = "Мої замовлення";
}

<h2 class="mb-4">Мої замовлення</h2>

@if (!Model.Any())
{
    <p>У вас немає замовлень.</p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Дата</th>
                <th>Статус</th>
                <th>Знижка</th>
                <th>Сума</th>
                <th>Дії</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.OrderedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@order.Status</td>
                    <td>@order.DiscountCode ?? "-" </td>
                    <td>@order.Total.ToString("C")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-primary">Деталі</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
