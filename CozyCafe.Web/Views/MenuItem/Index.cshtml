@model (IEnumerable<CozyCafe.Models.DTO.Admin.MenuItemDto> Items, CozyCafe.Models.DTO.Admin.MenuItemFilterModel Filter)
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Меню";
}

<h2>Меню</h2>

<form method="get" class="mb-4">
    <div class="row g-2">
        <div class="col-md-3">
            <input type="text" name="SearchTerm" class="form-control" placeholder="🔍 Назва" value="@Model.Filter.SearchTerm" />
        </div>

        <div class="col-md-3">
            <select name="CategoryId" class="form-select">
                <option value="">Всі категорії</option>
                @foreach (var cat in ViewBag.Categories as SelectList)
                {
                    <option value="@cat.Value" selected="@(Model.Filter.CategoryId?.ToString() == cat.Value)">
                        @cat.Text
                    </option>
                }
            </select>
        </div>

        <div class="col-md-2">
            <input type="number" name="MinPrice" step="0.01" class="form-control" placeholder="Від ₴" value="@Model.Filter.MinPrice" />
        </div>

        <div class="col-md-2">
            <input type="number" name="MaxPrice" step="0.01" class="form-control" placeholder="До ₴" value="@Model.Filter.MaxPrice" />
        </div>

        <div class="col-md-2">
            <select name="SortBy" class="form-select">
                <option value="">Сортування</option>
                <option value="name" selected="@(Model.Filter.SortBy == "name")">Назва ↑</option>
                <option value="price_asc" selected="@(Model.Filter.SortBy == "price_asc")">Ціна ↑</option>
                <option value="price_desc" selected="@(Model.Filter.SortBy == "price_desc")">Ціна ↓</option>
            </select>
        </div>

        <div class="col-md-12 mt-2">
            <button type="submit" class="btn btn-primary">🔍 Пошук</button>
        </div>
    </div>
</form>

<hr />

@if (!Model.Items.Any())
{
    <div class="alert alert-warning">Нічого не знайдено</div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model.Items)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" />
                    }

                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        <p><strong>Категорія:</strong> @item.CategoryName</p>
                        <p><strong>Ціна:</strong> @item.Price ₴</p>
                    </div>
                </div>
            </div>
        }
    </div>
}

