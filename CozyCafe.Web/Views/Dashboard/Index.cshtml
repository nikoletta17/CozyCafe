@model CozyCafe.Models.DTO.Admin.DashboardStatsDto

@{
    ViewData["Title"] = "Панель адміністратора";
}

<h1>Панель адміністратора</h1>

<div class="row">
    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3">
            <div class="card-header">Замовлень</div>
            <div class="card-body">
                <h2 class="card-title">@Model.TotalOrders</h2>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-success mb-3">
            <div class="card-header">Загальний дохід</div>
            <div class="card-body">
                <h2 class="card-title">@Model.TotalRevenue.ToString("C")</h2>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-info mb-3">
            <div class="card-header">Користувачів</div>
            <div class="card-body">
                <h2 class="card-title">@Model.TotalUsers</h2>
            </div>
        </div>
    </div>
</div>

<h2>Топ меню за кількістю продажів</h2>

@if (Model.TopMenuItems.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Назва меню</th>
                <th>Продано (од.)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.TopMenuItems)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.QuantitySold</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Дані відсутні.</p>
}
