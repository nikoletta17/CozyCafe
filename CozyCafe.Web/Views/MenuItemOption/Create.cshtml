@model CozyCafe.Models.Domain.Admin.MenuItemOption

@{
    ViewData["Title"] = "Створити нову опцію";
}

<h1 class="text-3xl font-serif mb-6">Додати нову опцію</h1>

<form asp-action="Create" method="post" class="max-w-lg">
    <div class="mb-4">
        <label asp-for="Name" class="block font-semibold mb-1">Назва</label>
        <input asp-for="Name" class="border border-gray-300 rounded px-3 py-2 w-full" />
        <span asp-validation-for="Name" class="text-red-600"></span>
    </div>

    <div class="mb-4">
        <label asp-for="ExtraPrice" class="block font-semibold mb-1">Додаткова ціна</label>
        <input asp-for="ExtraPrice" type="number" step="0.01" class="border border-gray-300 rounded px-3 py-2 w-full" />
        <span asp-validation-for="ExtraPrice" class="text-red-600"></span>
    </div>

    <button type="submit" class="bg-emerald-600 hover:bg-emerald-700 text-white py-2 px-4 rounded font-semibold">Створити</button>
    <a asp-action="Index" class="ml-4 text-gray-600 hover:underline">Відмінити</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
