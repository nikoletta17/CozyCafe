@model IEnumerable<CozyCafe.Models.DTO.Admin.CategoryDto>

<h2>Категорії</h2>

<p>
    <a asp-action="Create">Створити нову категорію</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Назва</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@category.Id">Редагувати</a> |
                    <a asp-action="Details" asp-route-id="@category.Id">Деталі</a> |
                    <a asp-action="Delete" asp-route-id="@category.Id">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
