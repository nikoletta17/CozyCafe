@model CozyCafe.Models.ViewModels.DeleteAccountViewModel

@{
    ViewData["Title"] = "Видалити акаунт";
}

<h2>@ViewData["Title"]</h2>

<p class="text-danger">Увага! Видалення акаунта необоротне. Введіть пароль, щоб підтвердити.</p>

<form asp-action="DeleteAccount" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-danger">Видалити акаунт</button>
    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary ms-2">Відмінити</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
