@model IEnumerable<CozyCafe.Models.DTO.ForUser.OrderDto>

@{
    ViewData["Title"] = "Мої замовлення";
}

<h2 class="text-center my-4" style="font-family: 'Playfair Display', serif; color:#4b4a3f;">Мої замовлення</h2>

<table class="table table-bordered table-hover" style="font-family: 'Playfair Display', serif;">
    <thead class="table-light">
        <tr>
            <th>№</th>
            <th>Дата замовлення</th>
            <th>Статус</th>
            <th>Сума</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center">У вас поки немає замовлень.</td>
            </tr>
        }
        else
        {
            int count = 1;
            foreach (var order in Model)
            {
                <tr>
                    <td>@count</td>
                    <td>@order.OrderedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
                    <td style="color:#7a6651; font-weight:bold;">@order.Status</td>
                    <td>@order.Total.ToString("C")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-outline-secondary btn-sm" style="border-radius: 10px; font-family: 'Playfair Display', serif;">
                            Деталі
                        </a>
                    </td>
                </tr>
                count++;
            }
        }
    </tbody>
</table>
