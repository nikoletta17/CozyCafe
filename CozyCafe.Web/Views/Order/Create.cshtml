@model CozyCafe.Models.Domain.Common.Order

@{
    ViewData["Title"] = "Створити замовлення";
}

<h2>Створити нове замовлення</h2>

<form asp-action="Create" method="post" class="needs-validation" novalidate>
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="UserId" class="form-label">UserId (якщо потрібно)</label>
        <input asp-for="UserId" class="form-control" />
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <!-- Тут можна додати інші потрібні поля -->

    <button type="submit" class="btn btn-success">Створити</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
