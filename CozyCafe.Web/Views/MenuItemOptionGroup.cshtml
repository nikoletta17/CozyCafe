@model IEnumerable<CozyCafe.Models.DTO.Admin.MenuItemOptionGroupDto>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Option Groups";
}

<link href="https://fonts.googleapis.com/css2?family=Playfair+Display&display=swap" rel="stylesheet" />

<div class="container my-5" style="font-family: 'Playfair Display', serif;">
    <h1 class="mb-4 text-secondary">Option Groups</h1>

    @if (!Model.Any())
    {
        <p class="text-muted">No option groups found.</p>
    }
    else
    {
        <div class="row g-4">
            @foreach (var group in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-sm border-0 rounded-4" style="background-color: #f9f6f2;">
                        <div class="card-body">
                            <h3 class="card-title text-dark fw-bold">@group.Name</h3>
                            <hr class="border-secondary" />
                            @if (group.Options.Any())
                            {
                                <ul class="list-unstyled mb-0">
                                    @foreach (var option in group.Options)
                                    {
                                        <li class="py-1">
                                            <strong>@option.Name</strong>
                                            @if (option.ExtraPrice.HasValue && option.ExtraPrice.Value > 0)
                                            {
                                                <small class="text-muted">+ @option.ExtraPrice.Value.ToString("C")</small>
                                            }
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="text-muted fst-italic">No options in this group.</p>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
