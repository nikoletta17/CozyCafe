@model CozyCafe.Models.DTO.Admin.DiscountDto

@{
    ViewData["Title"] = "Видалити знижку";
}

<h1>Видалити знижку</h1>

<h3>Ви впевнені, що хочете видалити цю знижку?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Код</dt>
        <dd class="col-sm-10">@Model.Code</dd>

        <dt class="col-sm-2">Відсоток</dt>
        <dd class="col-sm-10">@Model.Percent %</dd>

        <dt class="col-sm-2">Дійсна до</dt>
        <dd class="col-sm-10">@Model.ValidTo.ToString("dd.MM.yyyy")</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Видалити</button>
    <a asp-action="Index" class="btn btn-secondary">Відмінити</a>
</form>
