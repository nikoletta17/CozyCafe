@model List<CozyCafe.Models.DTO.Admin.AdminOrderDto>

@{
    ViewData["Title"] = "Замовлення";

    // Створюємо список статусів для випадаючого списку
    var statusList = new List<SelectListItem>
    {
        new SelectListItem { Text = "Усі статуси", Value = "" },
        new SelectListItem { Text = "Pending", Value = "Pending" },
        new SelectListItem { Text = "Confirmed", Value = "Confirmed" },
        new SelectListItem { Text = "InProgress", Value = "InProgress" },
        new SelectListItem { Text = "Completed", Value = "Completed" },
        new SelectListItem { Text = "Cancelled", Value = "Cancelled" }
    };

    // Отримаємо поточне значення для фільтра з ViewData, або пустий рядок
    string currentStatus = ViewData["CurrentStatusFilter"] as string ?? "";
}

<h2>Замовлення</h2>

<form method="get" class="row g-3 mb-3">
    <div class="col-auto">
        <select name="statusFilter" class="form-select"
                asp-items="statusList"
                asp-for="@currentStatus">
        </select>
    </div>
    <div class="col-auto">
        <input type="text" name="userSearch" value="@(ViewData["CurrentUserSearch"] ?? "")" class="form-control" placeholder="Пошук користувача..." />
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary">Фільтрувати</button>
        <a asp-action="Index" class="btn btn-secondary">Скинути</a>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Користувач</th>
            <th>Дата</th>
            <th>Сума</th>
            <th>Статус</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.UserFullName (@order.UserEmail)</td>
                <td>@order.OrderedAt.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@order.Total.ToString("C")</td>
                <td>@order.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-info">Деталі</a>
                </td>
            </tr>
        }
    </tbody>
</table>
