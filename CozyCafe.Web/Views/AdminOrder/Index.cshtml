@model List<CozyCafe.Models.DTO.Admin.AdminOrderDto>

@{
    ViewData["Title"] = "Замовлення";
    string? currentStatus = ViewData["CurrentStatusFilter"] as string;
    string? currentUserSearch = ViewData["CurrentUserSearch"] as string;
}

<h2>Замовлення</h2>

<form method="get" class="row g-3 mb-3">
    <div class="col-auto">
        <select name="statusFilter" class="form-select">
            <option value="">Усі статуси</option>
            <option value="Pending" @(currentStatus == "Pending" ? "selected" : "")>Pending</option>
            <option value="Confirmed" @(currentStatus == "Confirmed" ? "selected" : "")>Confirmed</option>
            <option value="InProgress" @(currentStatus == "InProgress" ? "selected" : "")>InProgress</option>
            <option value="Completed" @(currentStatus == "Completed" ? "selected" : "")>Completed</option>
            <option value="Cancelled" @(currentStatus == "Cancelled" ? "selected" : "")>Cancelled</option>
        </select>
    </div>
    <div class="col-auto">
        <input type="text" name="userSearch" value="@currentUserSearch" class="form-control" placeholder="Пошук користувача..." />
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary">Фільтрувати</button>
        <a asp-action="Index" class="btn btn-secondary">Скинути</a>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Користувач</th>
            <th>Дата</th>
            <th>Сума</th>
            <th>Статус</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.UserFullName (@order.UserEmail)</td>
                <td>@order.OrderedAt.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@order.Total.ToString("C")</td>
                <td>@order.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-info">Деталі</a>
                </td>
            </tr>
        }
    </tbody>
</table>
